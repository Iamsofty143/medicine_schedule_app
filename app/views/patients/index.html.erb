<h1>Dashboard</h1>
<p>Welcome to your Dashboard.</p>

<%= link_to "Add New Patient", new_patient_path, class: "btn btn-primary" %>

<% if @patients.any? %>
  <h2>Your Patients</h2>
  <ul>
    <% @patients.each do |patient| %>
      <li>
        <strong>Name:</strong> <%= patient.name %><br>
        <strong>Email:</strong> <%= patient.email %><br>
        <strong>Status:</strong> <%= patient.status %><br>
        <%= link_to "View", patient_path(patient), class: "btn btn-secondary btn-sm mx-1" %>
        <%= link_to "Delete", patient_path(patient), method: :delete, data: { confirm: "Are you sure you want to delete #{patient.name}?" }, class: "btn btn-danger btn-sm mx-1" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You don't have any patients yet.</p>
<% end %>
